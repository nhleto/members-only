
  <div class="section">
    <div class="container">
      <h2 class='title is-2 has-text-centered'>What's on your mind?</h2>

        <%= simple_form_for(@post) do |f|%>
        <%= f.error_notification %>

          <div class="field">
            <div class="control">
              <%= f.input :title,
                wrapper: false,
                label_html: { class: 'label' },
                input_html: { class: 'input' },
                placeholder: 'Title...' %>
            </div>
          </div>

        <div class="field">
          <div class="control">
            <%= f.input :body, wrapper: false,
              label_html: { class: 'label' },
              input_html: {class: 'textarea', rows: '10'},
              placeholder: 'Write something...' %>
          </div>
        </div>

        <div class="field">
          <div class="control">
            <%= f.button :submit,
            class: 'button has-background-danger-light' %>
          </div>
        </div>
        
        <% end %>
    </div>
  </div>
