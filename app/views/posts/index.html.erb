<div class="column is-half">
  <div class="box">
    <div class="media-content">
      <div class="content">
        <% @posts.each do |post| %>
        <h1 class='title is-h1'><%= link_to post.title %></h1>
        <strong><%= post.user %></strong>
        <article class='post'><%= post.body %></article>
        <% end %>
      </div>
    </div>
  </div>
</div>