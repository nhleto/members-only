<!DOCTYPE html>
<html>

<head>
  <title>MembersOnly</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>
  <div class="navbar is-primary">
    <div class="navbar-brand">
      <div class="navbar-item">
        <h1 class="title is-h1 title-color-white">Members only</h1>
      </div>
    </div>
    <span></span>
    <span></span>
    <span></span>
    <div class="navbar-end">
      <div class="navbar-item">
        <% if user_signed_in? %>
          <h5 class="title is-5"><%= link_to current_user.email, posts_path %></h5>
        <% else %>
          <h5 class="title is-5"><%= link_to 'Home', posts_path %></h5>
        <% end %>

      </div>
      <div class="navbar-item">
        <% if user_signed_in? %>
        <h5 class="title is-5"><%= link_to 'Sign Out', destroy_user_session_path, method: :delete %></h5>
        <% else %>
        <h5 class="title is-5"><%= link_to 'Sign In', user_session_path %></h5>
        <% end %>
      </div>
    </div>
  </div>


  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>
  <%= yield %>
</body>

</html>